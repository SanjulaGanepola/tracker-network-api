{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}